int size;
double v[100];

double avg() {
  int i;
  double sum = 0;
  for (i = 0; i < size; i = i + 1;) {
    sum = sum + v[i];
  }
  return sum / size;
}

void main(void) {
  int i;
  writes("Introduza tamanho do vetor, seguido dos respetivos valores:");
  size = read();
  for (i = 0; i < size; i = i + 1;) {
    v[i] = read();
  }
  write(avg());
}
